<resources>
    <!-- Base application theme. -->
    <style name="RedAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/RedActionBar</item>
        <item name="android:titleTextStyle">@style/WhiteActionBarText</item>
        <item name="android:listViewStyle">@style/RedNavigationDrawer</item>
    </style>

    <style name="RedActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:colorBackground">@color/CoreRed</item>
    </style>

    <style name="WhiteActionBarText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="RedNavigationDrawer" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/CoreRed</item>
    </style>

    <style name="NavDrawerItemSelected" parent="@style/RedAppTheme">
    </style>

    <style name="PreferencesTheme">
        <item name="android:background">@color/White</item>
    </style>
</resources>
