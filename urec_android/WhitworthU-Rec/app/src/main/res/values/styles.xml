<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/CoreRed</item>
    </style>

    <style name="RedActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:colorBackground">@color/CoreRed</item>
    </style>

    <style name="WhiteActionBarText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="PreferencesTheme">
        <item name="android:background">@color/White</item>
    </style>
</resources>
